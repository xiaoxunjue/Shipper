<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.revenant.shipper.ui.activity.SuggestionsActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayoutsuggestions"
        android:layout_width="match_parent"
        app:tabBackground="@color/white"
        app:tabTextColor="@color/bottom_select_text"
        app:tabSelectedTextColor="@color/bottom_select_text"
        android:layout_height="wrap_content">

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagersuggestions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.viewpager.widget.ViewPager>

</LinearLayout>
