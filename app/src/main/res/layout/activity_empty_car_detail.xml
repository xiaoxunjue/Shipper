<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.revenant.shipper.ui.activity.EmptyCarDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="发车地点"
                    android:textSize="18sp"></TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="5dp"
                    app:contentPaddingBottom="20dp"
                    app:contentPaddingTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="30dp"
                                android:background="@color/blue"
                                android:paddingLeft="2dp"
                                android:paddingTop="5dp"
                                android:paddingRight="2dp"
                                android:paddingBottom="5dp"
                                android:text="出发城市"
                                android:textColor="@color/white"></TextView>

                            <TextView
                                android:id="@+id/strat_place"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="辽宁省鞍山市千山区"
                                android:textColor="@color/black"
                                android:textSize="20sp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="30dp"
                                android:background="@color/bottom_select_text"
                                android:paddingLeft="2dp"
                                android:paddingTop="5dp"
                                android:paddingRight="2dp"
                                android:paddingBottom="5dp"
                                android:text="目的城市"
                                android:textColor="@color/white"></TextView>

                            <TextView
                                android:id="@+id/end_place"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="辽宁省鞍山市千山区"
                                android:textColor="@color/black"
                                android:textSize="20sp"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="车辆规格"
                    android:textSize="18sp"></TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="5dp"
                    app:contentPaddingBottom="20dp"
                    app:contentPaddingTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="30dp"
                                android:ems="4"
                                android:paddingLeft="2dp"
                                android:paddingTop="5dp"
                                android:paddingRight="2dp"
                                android:paddingBottom="5dp"
                                android:text="车牌号"
                                android:textSize="18sp"></TextView>

                            <TextView
                                android:id="@+id/car_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="辽宁省鞍山市千山区"
                                android:textColor="@color/black"
                                android:textSize="18sp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="30dp"
                                android:ems="4"
                                android:paddingLeft="2dp"
                                android:paddingTop="5dp"
                                android:paddingRight="2dp"
                                android:paddingBottom="5dp"
                                android:text="货车规格"
                                android:textSize="18sp"></TextView>

                            <TextView
                                android:id="@+id/car_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="辽宁省鞍山市千山区"
                                android:textColor="@color/black"
                                android:textSize="18sp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="30dp"
                                android:ems="4"
                                android:paddingLeft="2dp"
                                android:paddingTop="5dp"
                                android:paddingRight="2dp"
                                android:paddingBottom="5dp"
                                android:text="联系电话"
                                android:textSize="18sp"></TextView>

                            <TextView
                                android:id="@+id/car_pho"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="辽宁省鞍山市千山区"
                                android:textColor="@color/black"
                                android:textSize="18sp"></TextView>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="司机信息"
                    android:textSize="18sp"></TextView>

                <include layout="@layout/item_driver_info"></include>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/personal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add_shuche"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:gravity="center_horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="加入熟车"
                android:textColor="@color/white"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:gravity="center_horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/push_goods"
                android:text="推送货源"
                android:textColor="@color/white"></TextView>
        </LinearLayout>
    </RelativeLayout>


</androidx.core.widget.NestedScrollView>
