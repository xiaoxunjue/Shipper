<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/basetitle_show_or_hide"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bar_bg_color"
    android:minHeight="?attr/actionBarSize"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/o2oman"
        android:orientation="horizontal"
        android:paddingTop="25dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/left_base_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/center_base_bar_title"
            android:layout_alignParentLeft="true"
            android:paddingLeft="13dp"
            android:paddingRight="10dp"
            android:src="@mipmap/fanhuileft" />

        <TextView
            android:id="@+id/center_base_bar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="@color/bar_text_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/right_base_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="right"
            android:textColor="@color/bar_text_color"
            android:textSize="20sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/right_base_bar_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingRight="10dp"
            android:src="@mipmap/message"
            android:visibility="invisible"></ImageView>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/networkshow"
        android:visibility="gone"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/netbgcolor"
            android:paddingTop="10dp"
            android:text="网 络 状 态 异 常"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:paddingBottom="10dp">
        </TextView>
    </LinearLayout>
</LinearLayout>